@using Marketplace_portal.Models;
@using MarketplacePortal_DAL;

@{
    var Products = ViewData["products"] as List<tblProduct>;
    var productsNames = new string[Products.Count()];

    for(var i = 0; i < Products.Count(); i++)
    {
        productsNames[i] = Products[i].ProductName;
    }

    //foreach(tblProduct p in Products){
    //    productsNames.Add(p.ProductName);
    //}

    //productsNames = List.ToArray();

    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    @Products[0].ProductName;
    @productsNames[0];


    <label for="autocomplete">Select a programming language: </label>
    <input id="autocomplete">


</body>
</html>

<script type="text/javascript">
    $("#autocomplete").autocomplete({
        source: @productsNames
    });
</script>

